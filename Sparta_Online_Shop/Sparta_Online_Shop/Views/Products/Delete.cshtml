@model Sparta_Online_Shop.Product

@{
    ViewBag.Title = "Delete Product Confirm";
}


<div style="width:80%; margin:60px auto;color: #db7b7b;">
    <h3>Are you sure you want to delete this product?</h3>
    <div style="color: #dbcbd4;">
        <h4> @Html.DisplayFor(model => model.ProductName) </h4>
        <dl class="dl-horizontal">
            <dt>
                SKU
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SKU)
            </dd>

            <dt>
                Product Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProductName)
            </dd>

            <dt>
                Description
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProductDescription)
            </dd>

            <dt>
                Amount of Stock
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Stock) units
            </dd>

            <dt>
                Price
            </dt>

            <dd>
                &pound;@Html.DisplayFor(model => model.Price)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="SpartaDeleteCancel form-actions no-color">
                @Html.ActionLink("Cancel", "Index", null, new { @class = "Cancel btn btn-default" })
                <input type="submit" value="Delete" class="Delete btn btn-default" /> 
            </div>
        }
    </div>
</div>