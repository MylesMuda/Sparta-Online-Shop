@model IEnumerable<Sparta_Online_Shop.Review>

<style>
    .checked {
        color: orange;
    }
</style>

<!--Partial View-->
<!--All reviews of a product-->
<div style="color:white">
    <h4>Customer Reviews</h4>
    @foreach (var item in Model)
    {
<div>
    <div>
        <div>
            @Html.DisplayFor(modelItem => item.User.FirstName) @Html.DisplayFor(modelItem => item.User.LastName)
        </div>
        <div>
            Rating: @Html.DisplayFor(modelItem => item.Rating)
        </div>
        <div>
            @for (int i = 1; i <= 5; i++)
            {
                if (i <= item.Rating)
                {
                    <span class="fa fa-star checked"></span>
                }
                else
                {
                    <span class="fa fa-star"></span>
                }
            }
        </div>
    </div>
    <div>
        @Html.DisplayFor(modelItem => item.DateOfReview)
    </div>
    <div>
        <p>@Html.DisplayFor(modelItem => item.ReviewText)</p>
    </div>
</div>

    }
</div>
